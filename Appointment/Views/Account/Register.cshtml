@model Appointment.Models.ViewModels.RegisterViewModel

<h2>Sign up</h2>
<form method="post" asp-action="Register" asp-controller="Account">
    <h4>Create a new account</h4>
    <hr />
    
        <div class="input-group mb-3">
            <label class="col-md-2" asp-for="Name"></label>
            <div class="col-md-8">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
   
    <div class="input-group mb-3">
        <label class="col-md-2" asp-for="Email"></label>
        <div class="col-md-8">
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        </div>
    <div class="input-group mb-3">
        <label class="col-md-2" asp-for="Password"></label>
        <div class="col-md-8">
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        </div>
    <div class="input-group mb-3">
        <label class="col-md-2" asp-for="ConfirmPassowrd"></label>
        <div class="col-md-8">
            <input asp-for="ConfirmPassowrd" class="form-control" />
            <span asp-validation-for="ConfirmPassowrd" class="text-danger"></span>
        </div>
        </div>
    <div class="input-group mb-3  ">
        <label class="col-md-2" asp-for="RoleName"></label>
        <div class="col-md-8  ">
            <select asp-for="RoleName" asp-items="@Appointment.Helper.Utilities.RolesForDropDown()" class="form-control"></select>
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>
    <div class="input-group mb-3">
        <div class="col-md-10 offset-md-2">
            <input type="submit" value="Register" class="btn btn-success" />
        </div>

    </div>
    <p class="col-md-10 offset-md-2">
        <a asp-action="Login">Sign in</a>
    </p>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}